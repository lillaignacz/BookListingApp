<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPrimaryLight</item>
    </style>

    <style name="MainItemContainer">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">@dimen/default_list_item_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="Authors">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="PublishedDateContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
    </style>

    <style name="PublishedDateLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PublishedDate">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ListItemDivider">
        <item name="android:layout_width">@dimen/basic_divider</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="SearchContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SearchField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/search_hint</item>
    </style>

    <style name="SearchButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/search_button_label</item>
    </style>

    <style name="HorizontalProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
    </style>

    <style name="ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_below">@id/search_view</item>
        <item name="android:divider">@color/colorDivider</item>
        <item name="android:dividerHeight">@dimen/basic_divider</item>
    </style>

    <style name="EmptyTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>
</resources>
